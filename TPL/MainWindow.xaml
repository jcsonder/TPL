<Window x:Class="TPL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Name="StartButton" Grid.Row="0" Grid.Column="0" Content="Start" Click="StartButton_Click" />
        <Button Name="CancelButton" Grid.Row="0" Grid.Column="1" Content="Cancel" Click="CancelButton_Click" />
        <Button Name="ClearButton" Grid.Row="0" Grid.Column="2" Content="Clear" Click="ClearButton_Click" />
        <ListBox Name="listBox" Grid.Row="1" Grid.ColumnSpan="3" />
    </Grid>
</Window>
